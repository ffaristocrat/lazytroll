{
  "name": "Lazy Troll Blocker",
  "version": "2.0.0",
  "description": "Automatically block Twitter accounts from lazy trolls",
  "manifest_version": 3,

  "content_scripts": [
    {
      "js": [
        "jquery-3.6.4.min.js",
        "content.js",
        "whitelist.js"
      ],
    "matches": ["*://*.twitter.com/*", "*://twitter.com/*"]
    }
  ],
  "host_permissions": [
    "https://*.twitter.com/"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
